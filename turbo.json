{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "nom-web#build": {
      "dependsOn": ["^build"],
      "env": [
        "PUBLIC_PUSHER_KEY",
        "PUBLIC_CLOUDFLARE_ACCOUNT_HASH",
        "PUBLIC_ALCHEMY_API_KEY",
        "PUBLIC_WALLET_CONNECT_PROJECT_ID"
      ],
      "outputs": ["dist/**"]
    },
    "nouns-camp#build": {
      "dependsOn": ["^build"],
      "env": [
        "APP_HOST",
        "APP_PRODUCTION_URL",
        "CAMP_FARCASTER_ACCOUNT_FID",
        "CAMP_FARCASTER_ACCOUNT_PRIVATE_KEY",
        "EDGE_CONFIG",
        "ETHERSCAN_API_KEY",
        "FARCASTER_HUB_HTTP_ENDPOINT",
        "KV_REST_API_READ_ONLY_TOKEN",
        "KV_REST_API_TOKEN",
        "KV_REST_API_URL",
        "KV_URL",
        "NEYNAR_API_KEY",
        "NOUNS_SUBGRAPH_URL",
        "PROPDATES_SUBGRAPH_URL",
        "FLOWS_SUBGRAPH_URL",
        "SENTRY_AUTH_TOKEN",
        "SESSION_SEAL_SECRET",
        "TENDERLY_API_KEY",
        "TENDERLY_PROJECT_SLUG"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "obvious-landing#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "farcord#build": {
      "dependsOn": ["^build"],
      "env": [
        "PUBLIC_NEYNAR_API_KEY",
        "PUBLIC_WARPCAST_API_TOKEN",
        "PUBLIC_FARCASTER_HUB_RPC_ENDPOINT",
        "PUBLIC_IMGUR_CLIENT_ID",
        "PUBLIC_INFURA_PROJECT_ID",
        "PUBLIC_WALLET_CONNECT_PROJECT_ID",
        "PUBLIC_FATHOM_SITE_ID",
        "PUBLIC_APP_TITLE",
        "PUBLIC_APP_DESCRIPTION"
      ],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["CI_LINT"]
}
